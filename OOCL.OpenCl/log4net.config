<log4net>
	<appender name="LastRunFileAppender" type="log4net.Appender.FileAppender">
		<file type="log4net.Util.PatternString" value="${APPDIR}/OOCL.OpenCl/_Logs/last_run.log" />
		<appendToFile value="false" />
		<!-- Überschreibt die Datei bei jedem Start -->
		<lockingModel type="log4net.Appender.FileAppender+MinimalLock" />
		<layout type="log4net.Layout.PatternLayout">
			<conversionPattern value="%date %-5level %logger - %message%newline" />
		</layout>
	</appender>
	<root>
		<level value="INFO" />
		<appender-ref ref="LastRunFileAppender" />
	</root>
</log4net>